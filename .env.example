# Gmail API Credentials
GMAIL_CREDENTIALS_FILE=config/gmail_credentials.json
GMAIL_TOKEN_FILE=config/gmail_token.json

# ============================================================================
# LLM Configuration - MLX server (development & production)
# ============================================================================
# Run mlx_lm.server on your macOS laptop and expose it to the development
# environment (e.g. via Tailscale). Update the base URL to point at that host.
LLM_BASE_URL=http://localhost:8080/v1
LLM_MODEL=mlx-community/Llama-3.2-3B-Instruct-4bit
LLM_API_KEY=not-needed

# Example for remote access over Tailscale:
# LLM_BASE_URL=http://mlx-laptop:8080/v1

# Optional: If you switch to another OpenAI-compatible provider, override:
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4o-mini
# LLM_API_KEY=your-provider-api-key

# Label Configuration
LABEL_CONFIG_FILE=config/labels.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/email_triage.log
